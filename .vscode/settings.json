{
  "editor.fontSize": 14,
  "editor.tabSize": 2,
  "editor.renderWhitespace": "all",
  "editor.formatOnSave": false,
  "editor.formatOnPaste": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "javascript.validate.enable": false,
  "eslint.validate": [
    "html",
    "vue",
    "javascript",
    "javascriptreact"
  ],
  "eslint.options": {
    "extensions": [
      ".html",
      ".js",
      ".vue",
      ".jsx"
    ]
  },
  "eslint.enable": true,
  "eslint.run": "onType",
  "eslint.alwaysShowStatus": true
}
